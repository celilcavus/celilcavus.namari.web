@model IEnumerable<Customers>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Image</td>
            <td>Description</td>
            <td>FullName</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Image</td>
                <td>@item.Description</td>
                <td>@item.FullName</td>
                <td><a asp-action="Update" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Update</a></td>
                <td><a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a></td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="Customer" class="btn btn-dark">Back To Customer</a>
